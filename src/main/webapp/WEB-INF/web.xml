<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>GetItemsServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.GetItemsServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AddItemServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.AddItemServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DeleteItemServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.DeleteItemServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>PerformItemServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.PerformItemServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>RegServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.RegServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.AuthServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>ru.job4j.todolist.servlet.LogoutServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>GetItemsServlet</servlet-name>
    <url-pattern>/get</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AddItemServlet</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DeleteItemServlet</servlet-name>
    <url-pattern>/del</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>PerformItemServlet</servlet-name>
    <url-pattern>/perform</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RegServlet</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
</web-app>
